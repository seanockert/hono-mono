{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:full": "cd .. && bun run build:client && cd server && rm -rf static && mkdir -p static && cp -r ../client/dist/* static/ && tsc",
    "dev": "bun run --hot src/index.ts",
    "deploy": "bun run build:full && wrangler deploy --minify"
  },
  "dependencies": {
    "better-auth": "^1.3.7",
    "hono": "^4.9.5",
    "shared": "workspace:*",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
