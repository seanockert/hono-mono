name = "hono-mono-app"
main = "dist/index.js"
compatibility_date = "2025-02-13"
compatibility_flags = ["nodejs_compat"]

[assets]
directory = "./static"

# SPA fallback configuration
[[assets.rules]]
globs = ["/**"]
fallback = { path = "/index.html" }

[vars]
# Public URLs
BETTER_AUTH_URL = "https://hono-mono.mydomain.workers.dev"
CLIENT_URL = "https://hono-mono.mydomain.workers.dev"
# BETTER_AUTH_SECRET is configured as a Wrangler secret

[[d1_databases]]
binding = "DATABASE"
database_name = "hono-mono"
database_id = "xxx"
